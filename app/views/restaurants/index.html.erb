<!-- Latest compiled and minified CSS -->
<div class="jumbotron">
<h1>GalenTable</h1>

</div>
<div class="panel panel-default col-md-12">
<table id = "r-table" class="table">
	<th>Name</th>
	<th>Address</th>
	<th>Phone</th>
	<th colspan = "3">Action</th>

	<% @restaurant.each do |r| %>
		<tr>
			<p>
				<td><%= link_to r.name, r %></td>
				<td><%= r.full_address %></td>
				<td><%= r.phone %></td>
				<td><%= r.description %></td>
			</p>
			<p>
				<% if user_signed_in? %>
					<td><%= link_to "Edit", edit_restaurant_path(r) %></td></br>
					<td><%= link_to "Remove", r, method: :delete, data: { confirm: "Are you sure?" } %></td>
				<% end %>
			</p>
		</tr>
	<% end %>
</table>
</div>
<br><br>

<%= link_to "Add", new_restaurant_path %>